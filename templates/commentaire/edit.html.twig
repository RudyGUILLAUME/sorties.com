{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
    <h2>Modifier ton commentaire</h2>

    {{ form_start(commentaireForm) }}
    {{ form_row(commentaireForm.message) }}
    {{ form_row(commentaireForm.note) }}
    <button class="btn btn-primary">üíæ Enregistrer</button>
    <a href="{{ path('app_sortie_show', { id: commentaire.sortie.id }) }}" class="btn btn-secondary">‚Ü©Ô∏è Annuler</a>
    {{ form_end(commentaireForm) }}

    <style>
        :root {
            --primary: #f4c652;
            --background-light: #f8f7f6;
            --background-dark: #221d10;
            --text-light: #1c170d;
            --text-dark: #fcfbf8;
            --secondary-light: #f3f0e7;
            --secondary-dark: #3a342a;
            --subtle-light: #9b844b;
            --subtle-dark: #a1998a;
            --font-display: "Plus Jakarta Sans", "Noto Sans", sans-serif;
        }

        body {
            background: var(--background-light);
            color: var(--text-light);
            font-family: var(--font-display);
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            padding: 2rem;
        }

        h2 {
            text-align: center;
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--background-dark);
            margin-bottom: 1.5rem;
            letter-spacing: 0.5px;
        }

        form {
            background: var(--secondary-light);
            padding: 2rem;
            border-radius: 1.2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 600px;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            transition: all 0.3s ease;
        }

        form:hover {
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
        }

        form label {
            font-weight: 600;
            color: var(--secondary-dark);
            margin-bottom: 0.3rem;
        }

        form textarea,
        form select,
        form input[type="text"] {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 0.8rem;
            border: 1px solid var(--subtle-dark);
            background: var(--background-light);
            font-size: 1rem;
            color: var(--text-light);
            transition: border 0.2s ease, box-shadow 0.2s ease;
        }

        form textarea:focus,
        form select:focus,
        form input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(244, 198, 82, 0.2);
            outline: none;
        }

        button.btn {
            background: var(--primary);
            border: none;
            color: var(--text-light);
            padding: 0.8rem 1.5rem;
            border-radius: 0.8rem;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.2s ease;
            align-self: center;
            min-width: 150px;
        }

        button.btn:hover {
            background: var(--subtle-light);
            color: var(--background-dark);
            transform: translateY(-2px);
        }

        a.btn-secondary {
            background: var(--secondary-dark);
            color: var(--text-dark);
            text-decoration: none;
            padding: 0.8rem 1.5rem;
            border-radius: 0.8rem;
            font-weight: 600;
            font-size: 1rem;
            text-align: center;
            transition: background 0.2s ease, transform 0.2s ease;
            align-self: center;
        }

        a.btn-secondary:hover {
            background: var(--background-dark);
            transform: translateY(-2px);
        }

        @media (max-width: 600px) {
            body {
                padding: 1rem;
            }
            form {
                padding: 1.5rem;
            }
            h2 {
                font-size: 1.4rem;
            }
            button.btn, a.btn-secondary {
                width: 100%;
            }
        }
    </style>

{% endblock %}


