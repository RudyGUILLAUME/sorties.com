{% extends 'base.html.twig' %}

{% block title %}Nouveau lieu{% endblock %}

{% block body %}
    <main class="flex-1 p-8 overflow-y-auto">
        <div class="max-w-4xl mx-auto">

            <!-- üß≠ Fil d‚ÄôAriane -->
            <div class="flex flex-wrap gap-2 mb-6 text-sm">
                <a href="{{ path('app_home') }}" class="text-primary hover:underline">Accueil</a>
                <span class="text-subtext-light dark:text-subtext-dark">/</span>
                <a href="{{ path('app_lieu_index') }}" class="text-primary hover:underline">Lieux</a>
                <span class="text-subtext-light dark:text-subtext-dark">/</span>
                <span class="text-text-light dark:text-text-dark">Nouveau lieu</span>
            </div>

            <!-- üèôÔ∏è Titre -->
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-3xl font-extrabold text-text-light dark:text-text-dark">Cr√©er un nouveau lieu</h1>
                <a href="{{ path('app_lieu_index') }}"
                   class="flex items-center gap-2 text-sm font-medium text-primary hover:underline">
                    <span class="material-symbols-outlined text-base">arrow_back</span>
                    Retour
                </a>
            </div>

            <!-- üß© Formulaire -->
            <div class="bg-white dark:bg-[#192633] rounded-xl border border-border-light dark:border-border-dark shadow-sm p-8">
                {{ form_start(form) }}

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                    <!-- üè∑Ô∏è Nom -->
                    <div>
                        <label for="{{ form.nom.vars.id }}"
                               class="block text-sm font-medium text-text-light dark:text-text-dark mb-1">
                            {{ form_label(form.nom) }}
                        </label>
                        {{ form_widget(form.nom, {
                            'attr': {
                                'class': 'w-full h-11 rounded-lg border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark px-4 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition'
                            }
                        }) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <!-- üè† Rue -->
                    <div>
                        <label for="{{ form.rue.vars.id }}"
                               class="block text-sm font-medium text-text-light dark:text-text-dark mb-1">
                            {{ form_label(form.rue) }}
                        </label>
                        {{ form_widget(form.rue, {
                            'attr': {
                                'class': 'w-full h-11 rounded-lg border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark px-4 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition'
                            }
                        }) }}
                        {{ form_errors(form.rue) }}
                    </div>

                    <!-- üìç Latitude -->
                    <div>
                        <label for="{{ form.latitude.vars.id }}"
                               class="block text-sm font-medium text-text-light dark:text-text-dark mb-1">
                            {{ form_label(form.latitude) }}
                        </label>
                        {{ form_widget(form.latitude, {
                            'attr': {
                                'class': 'w-full h-11 rounded-lg border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark px-4 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition'
                            }
                        }) }}
                        {{ form_errors(form.latitude) }}
                    </div>

                    <!-- üåç Longitude -->
                    <div>
                        <label for="{{ form.longitude.vars.id }}"
                               class="block text-sm font-medium text-text-light dark:text-text-dark mb-1">
                            {{ form_label(form.longitude) }}
                        </label>
                        {{ form_widget(form.longitude, {
                            'attr': {
                                'class': 'w-full h-11 rounded-lg border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark px-4 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition'
                            }
                        }) }}
                        {{ form_errors(form.longitude) }}
                    </div>

                    <!-- üèôÔ∏è Ville -->
                    <div class="md:col-span-2">
                        <label for="{{ form.ville.vars.id }}"
                               class="block text-sm font-medium text-text-light dark:text-text-dark mb-1">
                            {{ form_label(form.ville) }}
                        </label>
                        {{ form_widget(form.ville, {
                            'attr': {
                                'class': 'w-full h-11 rounded-lg border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark px-4 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition'
                            }
                        }) }}
                        {{ form_errors(form.ville) }}
                    </div>
                </div>

                <!-- üß≠ Boutons -->
                <div class="flex justify-end gap-3 mt-8">
                    <a href="{{ path('app_lieu_index') }}"
                       class="h-11 px-6 flex items-center justify-center rounded-lg border border-border-light dark:border-border-dark text-text-light dark:text-text-dark bg-background-light dark:bg-background-dark text-sm font-semibold hover:bg-secondary-light/70 dark:hover:bg-secondary-dark/60 transition">
                        Annuler
                    </a>

                    <button type="submit"
                            class="h-11 px-6 flex items-center justify-center rounded-lg bg-primary text-white text-sm font-semibold hover:bg-primary/90 transition">
                        Cr√©er le lieu
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}
