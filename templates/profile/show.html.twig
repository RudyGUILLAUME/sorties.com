{% extends 'base.html.twig' %}

{% block title %}Profil - {{ participant.prenom }} {{ participant.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Mon profil</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">{{ participant.prenom }} {{ participant.nom }}</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email :</strong> {{ participant.mail }}</li>
                <li class="list-group-item"><strong>Téléphone :</strong> {{ participant.telephone }}</li>
                <li class="list-group-item"><strong>Administrateur :</strong> {{ participant.administrateur ? 'Oui' : 'Non' }}</li>
                <li class="list-group-item"><strong>Actif :</strong> {{ participant.actif ? 'Oui' : 'Non' }}</li>
            </ul>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
</div>
{% endblock %}
