{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.prenom }}{% endblock %}

{% block body %}
    <main class="flex-grow p-6 md:p-10 bg-background-light dark:bg-background-dark min-h-screen">
        <div class="max-w-6xl mx-auto">
            <!-- Fil d’Ariane -->
            <div class="flex flex-wrap gap-2 mb-6">
                <a class="text-primary text-base font-medium" href="{{ path('app_sortie_index') }}">Accueil</a>
                <span class="text-gray-500 dark:text-white/60">/</span>
                <span class="text-text-light dark:text-text-dark">Profil</span>
            </div>

            <!-- En-tête -->
            <div class="flex flex-wrap justify-between items-center gap-4 mb-8">
                <h1 class="text-4xl font-black text-text-light dark:text-text-dark">
                    Profil de {{ participant.prenom }}
                </h1>

                {% if app.user and app.user.id == participant.id %}
                    <a href="{{ path('app_profile_edit', {'id': participant.id}) }}"
                       class="flex items-center gap-2 rounded-lg bg-primary text-text-light px-4 py-2 font-semibold text-sm hover:opacity-90 transition">
                        <span class="material-symbols-outlined text-base">edit</span> Modifier
                    </a>
                {% endif %}
            </div>

            <!-- Contenu principal -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Colonne gauche -->
                <div class="lg:col-span-2 flex flex-col gap-8">
                    <!-- Informations personnelles -->
                    <div class="p-6 rounded-xl bg-white dark:bg-secondary-dark shadow-sm">
                        <h2 class="text-xl font-bold mb-6 text-text-light dark:text-text-dark">
                            Informations personnelles
                        </h2>

                        <div class="flex flex-col sm:flex-row sm:items-center gap-6 mb-6">
                            <!-- Photo -->
                            <div class="relative group">
                                <div class="bg-center bg-no-repeat bg-cover rounded-full h-28 w-28 border border-subtle-light dark:border-subtle-dark"
                                     style="background-image: url('{{ asset(participant.imageProfil
                                         ? 'images/uploads/' ~ participant.imageProfil
                                         : 'images/default-profile.jpg') }}');">
                                </div>
                            </div>

                            <!-- Nom + Email -->
                            <div>
                                <p class="text-text-light dark:text-text-dark text-[22px] font-bold">
                                    {{ participant.prenom }} {{ participant.nom }}
                                </p>
                                <p class="text-subtle-light dark:text-subtle-dark">{{ participant.mail }}</p>
                                {% if participant.site %}
                                    <p class="text-sm text-subtle-light dark:text-subtle-dark">
                                        {{ participant.site.nom }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Détails -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <p class="text-sm font-medium text-subtle-light dark:text-subtle-dark pb-1">
                                    Téléphone
                                </p>
                                <p class="text-text-light dark:text-text-dark">
                                    {{ participant.telephone ?: 'Non renseigné' }}
                                </p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-subtle-light dark:text-subtle-dark pb-1">
                                    Rôle utilisateur
                                </p>
                                <p class="text-text-light dark:text-text-dark">
                                    {% if 'ROLE_ADMIN' in participant.roles %}
                                        Administrateur
                                    {% elseif 'ROLE_USER' in participant.roles %}
                                        Utilisateur
                                    {% else %}
                                        Non défini
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Statistiques -->
                    <div class="p-6 rounded-xl bg-white dark:bg-secondary-dark shadow-sm">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-text-light dark:text-text-dark">Statistiques</h2>
                            <button id="btnShowChart"
                                    class="flex items-center gap-1 bg-transparent border border-subtle-light dark:border-subtle-dark rounded-lg px-3 py-1 text-sm text-text-light dark:text-text-dark hover:bg-secondary-light dark:hover:bg-secondary-dark transition">
                                <span class="material-symbols-outlined text-base">bar_chart</span>
                                Voir graphique
                            </button>
                        </div>

                        <!-- Données -->
                        <div class="flex flex-wrap justify-around text-center gap-6">
                            {% if sortiesOrganiseesCount is not null and sortiesOrganiseesCount > 0 %}
                                <div>
                                    <p class="text-3xl font-bold text-primary">{{ sortiesOrganiseesCount }}</p>
                                    <p class="text-subtle-light dark:text-subtle-dark text-sm">Sorties organisées</p>
                                </div>
                            {% endif %}
                            <div>
                                <p class="text-3xl font-bold text-primary">{{ sortiesParticipeesCount }}</p>
                                <p class="text-subtle-light dark:text-subtle-dark text-sm">Sorties participées</p>
                            </div>
                            <div>
                                <p class="text-3xl font-bold text-primary">
                                    {{ tauxParticipationGlobal|round(1) }}%
                                </p>
                                <p class="text-subtle-light dark:text-subtle-dark text-sm">Taux de participation</p>
                            </div>
                        </div>

                        <!-- Organisateur préféré -->
                        <div class="mt-8 space-y-2">
                            {% if organisateurPref %}
                                <p class="text-text-light dark:text-text-dark">
                                    <strong>Organisateur préféré :</strong> {{ organisateurPref.prenom }} {{ organisateurPref.nom }}
                                </p>
                            {% endif %}
                            {% if sitePref %}
                                <p class="text-text-light dark:text-text-dark">
                                    <strong>Site préféré :</strong> {{ sitePref.nom }}
                                </p>
                            {% endif %}
                        </div>

                        <!-- Graphique -->
                        <div id="chartContainer" class="mt-6 hidden">
                            <canvas id="profilStatsChart" height="150"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Colonne droite -->
                <div class="flex flex-col gap-8">
                    <div class="p-6 rounded-xl bg-white dark:bg-secondary-dark shadow-sm">
                        <h2 class="text-xl font-bold mb-4 text-text-light dark:text-text-dark">Autres informations</h2>
                        <p class="text-subtle-light dark:text-subtle-dark">Centres d’intérêt : <span class="italic">Non renseigné</span></p>
                    </div>

                </div>
            </div>
        </div>
    </main>

    <!-- Script du graphique -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('btnShowChart');
            const chartContainer = document.getElementById('chartContainer');
            let chartDisplayed = false;
            let myChart = null;

            btn.addEventListener('click', () => {
                chartContainer.classList.toggle('hidden');

                if (!chartDisplayed) {
                    const ctx = document.getElementById('profilStatsChart').getContext('2d');

                    const labels = [
                        {% if sortiesOrganiseesCount is not null and sortiesOrganiseesCount > 0 %}'Sorties organisées',{% endif %}
                        {% if sortiesParticipeesCount is not null %}'Sorties participées',{% endif %}
                        'Taux participation (%)'
                    ];
                    const data = [
                        {% if sortiesOrganiseesCount is not null and sortiesOrganiseesCount > 0 %}{{ sortiesOrganiseesCount }},{% endif %}
                        {% if sortiesParticipeesCount is not null %}{{ sortiesParticipeesCount }},{% endif %}
                        {{ tauxParticipationGlobal|round(1) }}
                    ];

                    myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Statistiques',
                                data: data,
                                backgroundColor: ['#f4c652', '#198754', '#ffc107'],
                                borderColor: '#fff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: { legend: { display: false } },
                            scales: {
                                y: { beginAtZero: true, suggestedMax: 100 }
                            }
                        }
                    });

                    chartDisplayed = true;
                }
            });
        });
    </script>
{% endblock %}
