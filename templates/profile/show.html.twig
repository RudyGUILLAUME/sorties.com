{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container rounded bg-white mt-5 mb-5 shadow-sm p-4">
        <div class="row">

            {# --- COLONNE PHOTO --- #}
            <div class="col-md-3 border-right text-center">
                <div class="p-3">
                    {% if participant.imageProfil %}
                        <img src="{{ asset('images/uploads/' ~ participant.imageProfil) }}"
                             alt="Photo de profil"
                             class="rounded-circle mb-3 shadow-sm"
                             width="150">
                    {% else %}
                        <img src="{{ asset('images/default-profile.jpg') }}"
                             alt="Photo par défaut"
                             class="rounded-circle mb-3 shadow-sm"
                             width="150">
                    {% endif %}

                    <h5 class="fw-bold">{{ participant.prenom ~ ' ' ~ participant.nom }}</h5>
                    <p class="text-muted mb-1">{{ participant.mail }}</p>
                    {% if participant.site %}
                        <p class="text-secondary small">{{ participant.site.nom }}</p>
                    {% endif %}
                </div>

                <hr>

                {# --- STATISTIQUES --- #}
                <div class="text-center mt-4">
                    <div class="text-center mt-4">
                        <div class="d-flex justify-content-center align-items-center mb-3">
                            <h6 class="fw-bold mb-0" style="color: #343a40;">Statistiques</h6>
                            <button id="btnShowChart" class="btn btn-outline-secondary btn-sm ms-2 p-1"
                                    title="Voir graphique"
                                    style="height: 28px; width: 28px; display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-bar-chart" style="font-size: 1rem; color: #0d6efd;"></i>
                            </button>
                        </div>
                    </div>


                    <div class="d-flex justify-content-around">
                        {% if sortiesOrganiseesCount is not null and sortiesOrganiseesCount > 0 %}
                            <div>
                                <h4 class="fw-bold text-dark mb-0">{{ sortiesOrganiseesCount }}</h4>
                                <small class="text-muted">Sorties organisées</small>
                            </div>
                        {% endif %}
                        <div>
                            <h4 class="fw-bold text-dark mb-0">{{ sortiesParticipeesCount }}</h4>
                            <small class="text-muted">Sorties participées</small>
                        </div>
                    </div>

                    <div class="mt-2">
                        {% if organisateurPref %}
                            <p class="mb-0"><strong>Organisateur préféré :</strong> {{ organisateurPref.prenom ~ ' ' ~ organisateurPref.nom }}</p>
                        {% endif %}
                        {% if sitePref %}
                            <p class="mb-0"><strong>Site préféré :</strong> {{ sitePref.nom }}</p>
                        {% endif %}
                    </div>

                    {# Div cachée pour le graphique #}
                    <div id="chartContainer" class="mt-3" style="display: none;">
                        <canvas id="profilStatsChart" height="150"></canvas>
                    </div>
                </div>

            </div>

            {# --- COLONNE INFORMATIONS PRINCIPALES --- #}
            <div class="col-md-5 border-right">
                <div class="p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4>Profil</h4>
                        {% if app.user and app.user.id == participant.id %}
                            <a href="{{ path('app_profile_edit', {'id': participant.id}) }}" class="btn btn-outline-primary btn-sm">
                                Modifier
                            </a>
                        {% endif %}
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">Prénom</label>
                            <p class="form-control-plaintext">{{ participant.prenom }}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Nom</label>
                            <p class="form-control-plaintext">{{ participant.nom }}</p>
                        </div>
                    </div>

                    <hr>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Téléphone</label>
                            <p class="form-control-plaintext">
                                {{ participant.telephone is not empty ? participant.telephone : 'Non renseigné' }}
                            </p>
                        </div>

                        <hr>

                        <div class="col-md-12 mt-3">
                            <label class="labels">Email</label>
                            <p class="form-control-plaintext">{{ participant.mail }}</p>
                        </div>

                        <hr>

                        <div class="col-md-12 mt-3">
                            <label class="labels">Site</label>
                            <p class="form-control-plaintext">
                                {{ participant.site ? participant.site.nom : 'Non défini' }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            {# --- COLONNE DROITE --- #}
            <div class="col-md-4">
                <div class="p-3">
                    <div class="d-flex justify-content-between align-items-center experience mb-3">
                        <h5>Autres informations</h5>
                    </div>

                    <div class="mb-3">
                        <label class="labels">Centres d’intérêt</label>
                        <p class="form-control-plaintext text-muted">Non renseigné</p>
                    </div>

                    <div class="mb-3">
                        <label class="labels">Rôle utilisateur</label>
                        <p class="form-control-plaintext">
                            {% if 'ROLE_ADMIN' in participant.roles %}
                                Administrateur
                            {% elseif 'ROLE_USER' in participant.roles %}
                                Utilisateur
                            {% else %}
                                Non défini
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    {# --- Chart.js Script --- #}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('btnShowChart');
            const chartContainer = document.getElementById('chartContainer');
            let chartDisplayed = false;
            let myChart = null;

            btn.addEventListener('click', () => {
                chartContainer.style.display = chartContainer.style.display === 'none' ? 'block' : 'none';

                if (!chartDisplayed) {
                    const ctx = document.getElementById('profilStatsChart').getContext('2d');

                    const labels = [
                        {% if sortiesOrganiseesCount is not null and sortiesOrganiseesCount > 0 %}'Sorties organisées',{% endif %}
                        {% if sortiesParticipeesCount is not null %}'Sorties participées',{% endif %}
                        'Taux participation (%)'
                    ];
                    const data = [
                        {% if sortiesOrganiseesCount is not null and sortiesOrganiseesCount > 0 %}{{ sortiesOrganiseesCount }},{% endif %}
                        {% if sortiesParticipeesCount is not null %}{{ sortiesParticipeesCount }},{% endif %}
                        {{ tauxParticipationGlobal|round(2) }}
                    ];

                    myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Stats Profil',
                                data: data,
                                backgroundColor: ['#0d6efd','#198754','#ffc107'],
                                borderColor: '#fff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { display: false },
                                tooltip: { enabled: true }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    suggestedMax: 100
                                }
                            }
                        }
                    });

                    chartDisplayed = true;
                }
            });
        });
    </script>
{% endblock %}
