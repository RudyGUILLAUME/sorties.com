<!-- partials/modal_connexion.html.twig -->
<div id="loginModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm">
    <div class="relative bg-white dark:bg-[#192633] rounded-2xl shadow-lg w-full max-w-md mx-4 p-8 animate-fadeIn">
        <!-- Bouton fermer -->
        <button type="button"
                class="absolute top-3 right-3 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                onclick="closeLoginModal()">
            <span class="material-symbols-outlined">close</span>
        </button>

        <!-- Titre -->
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-text-light dark:text-text-dark">Connexion</h2>
            <p class="text-subtext-light dark:text-subtext-dark mt-1">Acc√©dez √† votre compte Sorties.com</p>
        </div>

        <!-- Formulaire -->
        <form action="{{ path('app_login') }}" method="post" class="space-y-5">
            {% if error is defined and error %}
                <div class="bg-red-500/10 text-red-400 border border-red-400 px-4 py-2 rounded-lg text-sm text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <!-- üîê Email -->
            <div>
                <label for="username" class="block text-sm font-medium text-text-light dark:text-text-dark mb-1">Adresse email</label>
                <input type="text" id="username" name="_username" required
                       value="{{ last_username is defined ? last_username : '' }}"
                       class="w-full h-11 px-4 rounded-lg border border-gray-300 dark:border-gray-700 bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary">
            </div>

            <!-- üîë Mot de passe -->
            <div>
                <label for="password" class="block text-sm font-medium text-text-light dark:text-text-dark mb-1">Mot de passe</label>
                <input type="password" id="password" name="_password" required
                       class="w-full h-11 px-4 rounded-lg border border-gray-300 dark:border-gray-700 bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary">
            </div>

            <!-- ‚úÖ Token CSRF obligatoire -->
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- üß† Se souvenir -->
            <div class="flex items-center justify-between">
                <label class="flex items-center gap-2 text-sm text-subtext-light dark:text-subtext-dark">
                    <input type="checkbox" name="_remember_me"
                           class="rounded border-gray-300 dark:border-gray-600 text-primary focus:ring-primary">
                    Se souvenir de moi
                </label>
                <a href="{{ path('app_forgot_password_request') }}" class="text-primary text-sm hover:underline">Mot de passe oubli√© ?</a>
            </div>

            <!-- üîò Bouton -->
            <button type="submit"
                    class="w-full h-11 bg-primary text-white font-semibold rounded-lg hover:bg-primary/90 transition">
                Se connecter
            </button>
        </form>

        <!-- üßæ Lien inscription -->
        <p class="text-center text-sm text-subtext-light dark:text-subtext-dark mt-6">
            Pas encore de compte ?
            <a href="{{ path('app_register') }}" class="text-primary hover:underline">Cr√©er un compte</a>
        </p>
    </div>
</div>

<!-- JS ouverture/fermeture -->
<script>
    function openLoginModal() {
        document.getElementById('loginModal').classList.remove('hidden');
        document.getElementById('loginModal').classList.add('flex');
    }
    function closeLoginModal() {
        document.getElementById('loginModal').classList.remove('flex');
        document.getElementById('loginModal').classList.add('hidden');
    }
    document.addEventListener('click', function(e) {
        const modal = document.getElementById('loginModal');
        if (modal.classList.contains('flex') && e.target === modal) closeLoginModal();
    });
</script>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }
    .animate-fadeIn { animation: fadeIn 0.25s ease-out forwards; }
</style>
