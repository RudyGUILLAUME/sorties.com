{# partials/modal_connexion.html.twig #}

<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="connexionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="connexionModalLabel">Connexion</h5>
            </div>
            <div class="modal-body">
                {% if error is defined and error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('app_login') }}" method="post">
                    <div class="form-group mb-3">
                        <label for="username">Email :</label>
                        <input type="text" name="_username" id="username"
                               value="{{ last_username is defined ? last_username : '' }}"
                               class="form-control" required autocomplete="username">
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Mot de passe :</label>
                        <input type="password" name="_password" id="password" class="form-control" required autocomplete="current-password">
                    </div>

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-primary w-100" type="submit">Se connecter</button>
                </form>
            </div>
        </div>
    </div>
</div>
