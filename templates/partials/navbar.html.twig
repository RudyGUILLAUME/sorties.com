<header class="fixed top-0 left-0 w-full flex items-center justify-between whitespace-nowrap border-b border-solid border-secondary-light dark:border-secondary-dark px-10 py-3 bg-background-light/90 dark:bg-background-dark/90 backdrop-blur-md shadow-md z-50">
    <!-- LOGO -->
    <div class="flex items-center gap-4">
        <div class="size-6">
            <svg class="text-text-light dark:text-text-dark" fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M24 0.757L47.243 24 24 47.243 0.757 24 24 0.757ZM21 35.757V12.243L9.243 24 21 35.757Z" />
            </svg>
        </div>
        <h2 class="text-text-light dark:text-text-dark text-lg font-bold leading-tight tracking-[-0.015em]">
            sorties.com
        </h2>
    </div>

    <!-- MENU -->
    <nav class="hidden md:flex flex-1 justify-end gap-8 items-center">
        <div class="flex items-center gap-9">
            <a href="{{ path('app_sortie_index') }}" class="text-text-light dark:text-text-dark text-sm font-medium hover:text-primary transition">Tableau de bord</a>
        </div>

        <div class="flex items-center gap-9">
            <a href="{{ path('app_lieu_index') }}" class="text-text-light dark:text-text-dark text-sm font-medium hover:text-primary transition">Lieux</a>
        </div>

        <div class="flex items-center gap-9">
            <a href="{{ path('app_ville_index') }}" class="text-text-light dark:text-text-dark text-sm font-medium hover:text-primary transition">Villes</a>
        </div>

        <div class="flex items-center gap-9">
            <a href="{{ path('admin_panel') }}" class="text-text-light dark:text-text-dark text-sm font-medium hover:text-primary transition">Dashboard Admin</a>
        </div>


        {% if app.user %}
            <!-- BOUTON CREER -->
            <a href="{{ path('app_sortie_new') }}"
               class="flex items-center justify-center h-10 px-4 rounded-xl bg-primary text-text-light text-sm font-bold hover:opacity-90 transition">
                Cr√©er une sortie
            </a>

            <!-- AVATAR UTILISATEUR -->
            <div class="relative flex items-center gap-3">
                <a href="{{ path('app_profile_show', {id: app.user.id}) }}"
                   class="block rounded-full overflow-hidden border-2 border-primary shadow-sm hover:scale-105 transition-transform">
                    <div class="bg-center bg-no-repeat bg-cover size-10"
                         style="background-image: url('{{ asset('images/uploads/' ~ (app.user.imageProfil ?: 'default-avatar.png')) }}');">
                    </div>
                </a>
            </div>


            <div>
                <!-- BOUTON DECONNEXION -->
                <form method="post" action="{{ path('app_logout') }}" class="m-0 p-0">
                    <button type="submit"
                            class="flex items-center justify-center h-10 px-4 rounded-lg bg-red-500 text-white text-sm font-bold hover:bg-red-600 transition">
                        <span class="material-symbols-outlined text-base mr-1">logout</span>
                    </button>
                </form>
            </div>
        {% else %}
            <!-- BOUTON CONNEXION -->
            <button class="flex items-center justify-center h-10 px-4 rounded-xl bg-primary text-text-light text-sm font-bold hover:opacity-90 transition"
                    data-bs-toggle="modal" data-bs-target="#loginModal">
                Connexion
            </button>
        {% endif %}
    </nav>
</header>
