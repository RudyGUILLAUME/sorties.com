{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5" style="max-width: 900px;">

        <div class="d-flex align-items-center mb-4 gap-3">
            <img src="{{ asset('images/logo.png') }}" alt="Créer sortie" style="width: 50px; height: 50px; object-fit: contain;">
            <h1 class="fw-bold mb-0">Créer une sortie</h1>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card shadow border-0">
            <div class="card-body p-4">
                {{ form_start(form) }}
                <div class="row g-4">
                    <div class="col-md-6">{{ form_row(form.nom) }}</div>
                    <div class="col-md-6">{{ form_row(form.nbInscriptionsMax) }}</div>
                    <div class="col-md-6">{{ form_row(form.dateHeureDebut) }}</div>
                    <div class="col-md-6">{{ form_row(form.dateLimiteInscription) }}</div>
                    <div class="col-md-6">{{ form_row(form.duree) }}</div>
                    <div class="col-md-6">{{ form_row(form.site) }}</div>
                    <div class="col-12">{{ form_row(form.lieu) }}</div>
                    <div class="col-12">{{ form_row(form.infosSortie) }}</div>
                </div>

                {{ include('sortie/_form.html.twig') }}


                <div class="mt-4 d-flex justify-content-end gap-3">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary px-4">Annuler</a>
                    <button type="submit" class="btn btn-primary px-4 fw-semibold shadow-sm">Créer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
