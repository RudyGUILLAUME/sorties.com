{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Créer une sortie</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row g-3">
                    <div class="col-md-6">{{ form_row(form.nom) }}</div>
                    <div class="col-md-6">{{ form_row(form.nbInscriptionsMax) }}</div>
                    <div class="col-md-6">{{ form_row(form.dateHeureDebut) }}</div>
                    <div class="col-md-6">{{ form_row(form.dateLimiteInscription) }}</div>
                    <div class="col-md-6">{{ form_row(form.duree) }}</div>
                    <div class="col-md-6">{{ form_row(form.site) }}</div>
                    <div class="col-md-12">{{ form_row(form.lieu) }}</div>
                    <div class="col-12">{{ form_row(form.infosSortie) }}</div>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
