{% extends 'base.html.twig' %}

{% block title %}Toutes les sorties{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="d-flex align-items-center justify-content-between mb-4 p-3 bg-light rounded shadow-sm">

            <div class="d-flex align-items-center gap-3">
                <!-- Image à gauche (taille adaptée) -->
                <img src="{{ asset('images/logo.png') }}" alt="Sorties" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">

                <div>
                    <h2 class="h3 fw-bold mb-1">Toutes les sorties</h2>
                    <p class="text-secondary mb-0">Découvrez toutes les sorties disponibles</p>
                </div>
            </div>

            {% if app.user %}
                <div>
                    <a href="{{ path('app_sortie_new') }}" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-plus-lg me-2"></i> Créer une nouvelle sortie
                    </a>
                </div>
            {% endif %}
        </div>

        <!-- Menu Onglets -->
        <ul class="nav nav-tabs mb-3" id="sortieTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="toutes-tab" data-bs-toggle="tab" data-bs-target="#toutes" type="button" role="tab">
                    Toutes <span class="badge bg-secondary">{{ sorties|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="disponibles-tab" data-bs-toggle="tab" data-bs-target="#disponibles" type="button" role="tab">
                    Disponibles <span class="badge bg-success">{{ sortiesDisponibles|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pleines-tab" data-bs-toggle="tab" data-bs-target="#pleines" type="button" role="tab">
                    Pleines <span class="badge bg-warning text-dark">{{ sortiesPleines|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="archivees-tab" data-bs-toggle="tab" data-bs-target="#archivees" type="button" role="tab">
                    Archivées <span class="badge bg-danger">{{ sortiesArchivees|length }}</span>
                </button>
            </li>
        </ul>

        <div class="tab-content" id="sortieTabsContent">
            <!-- Onglet toutes les sorties -->
            <div class="tab-pane fade show active" id="toutes" role="tabpanel">
                {% include 'sortie/table.html.twig' with { 'sorties': sorties } %}
            </div>
            <!-- Onglet sorties disponibles -->
            <div class="tab-pane fade" id="disponibles" role="tabpanel" aria-labelledby="disponibles-tab">
                {% include 'sortie/table.html.twig' with {'sorties': sortiesDisponibles} %}
            </div>
            <!-- Onglet sorties pleines -->
            <div class="tab-pane fade" id="pleines" role="tabpanel" aria-labelledby="pleines-tab">
                {% include 'sortie/table.html.twig' with {'sorties': sortiesPleines} %}
            </div>
            <!-- Onglet sorties archivées -->
            <div class="tab-pane fade" id="archivees" role="tabpanel" aria-labelledby="archivees-tab">
                {% include 'sortie/table.html.twig' with {'sorties': sortiesArchivees} %}
            </div>

        </div>
    </div>
{% endblock %}
