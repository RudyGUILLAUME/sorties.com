{% extends 'base.html.twig' %}

{% block title %}Import CSV{% endblock %}

{% block body %}
    <div class="flex min-h-screen bg-background-light dark:bg-background-dark">

        <!-- Sidebar -->
        {% include 'partials/sidebar.html.twig' %}

        <!-- Contenu principal -->
        <main class="flex-1 p-8 overflow-y-auto">
            <div class="max-w-7xl mx-auto">

                <!-- En-tête -->
                <div class="flex flex-wrap justify-between items-center gap-4 mb-8">
                    <div>
                        <h1 class="text-3xl font-extrabold text-text-light dark:text-text-dark">Import CSV</h1>
                        <p class="text-subtext-light dark:text-subtext-dark mt-1">
                            Importez facilement des utilisateurs via un fichier CSV conforme.
                        </p>
                    </div>
                    <a href="{{ path('admin_participants') }}"
                       class="flex items-center justify-center gap-2 h-10 px-5 bg-primary text-white rounded-lg text-sm font-semibold hover:bg-primary/90 transition-colors">
                        <span class="material-symbols-outlined">arrow_back</span>
                        Retour à la gestion des utilisateurs
                    </a>
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-800 px-4 py-3 rounded-lg mb-4">
                        ✅ {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border border-red-400 text-red-800 px-4 py-3 rounded-lg mb-4">
                        ⚠️ {{ message }}
                    </div>
                {% endfor %}

                <!-- Contenu -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

                    <!-- Bloc Import -->
                    <div class="bg-white dark:bg-[#192633] rounded-xl shadow-sm p-6 border border-gray-200 dark:border-gray-700 relative">
                        <h2 class="text-lg font-bold text-text-light dark:text-text-dark mb-4">Importer un fichier CSV</h2>

                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        <div id="upload-area"
                             class="flex flex-col items-center justify-center border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-10 text-center hover:border-primary transition relative">

                            <!-- Icône upload -->
                            <span id="upload-icon" class="material-symbols-outlined text-5xl text-subtext-light dark:text-subtext-dark">upload_file</span>

                            <!-- Texte par défaut -->
                            <div id="upload-text" class="mt-4">
                                <p class="text-text-light dark:text-text-dark text-sm">Glissez-déposez votre fichier ici</p>
                                <label for="{{ form.csv_file.vars.id }}"
                                       class="mt-2 text-primary font-semibold hover:underline cursor-pointer block">
                                    ou cliquez pour parcourir
                                </label>
                            </div>

                            <!-- Texte une fois le fichier sélectionné -->
                            <div id="file-loaded" class="hidden mt-4 flex flex-col items-center gap-2">
                                <span class="material-symbols-outlined text-5xl text-green-500">check_circle</span>
                                <p class="text-green-500 font-semibold">Fichier chargé :</p>
                                <p id="file-name" class="text-sm text-text-light dark:text-text-dark"></p>
                                <button id="change-file"
                                        type="button"
                                        class="mt-2 text-primary font-medium text-sm hover:underline">
                                    Changer de fichier
                                </button>
                            </div>

                            <!-- Champ input -->
                            {{ form_widget(form.csv_file, {'attr': {'class': 'hidden'}}) }}
                        </div>

                        <div class="mt-6">
                            <button type="submit"
                                    class="w-full flex items-center justify-center rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold hover:bg-primary/90 transition">
                                Importer
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- ✅ JS Dynamique -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fileInput = document.querySelector('#{{ form.csv_file.vars.id }}');
            const uploadArea = document.getElementById('upload-area');
            const uploadIcon = document.getElementById('upload-icon');
            const uploadText = document.getElementById('upload-text');
            const fileLoaded = document.getElementById('file-loaded');
            const fileNameDisplay = document.getElementById('file-name');
            const changeFileBtn = document.getElementById('change-file');

            if (!fileInput) return;

            // ✅ Quand un fichier est sélectionné
            fileInput.addEventListener('change', e => {
                const file = e.target.files[0];
                if (file) {
                    fileNameDisplay.textContent = file.name;
                    uploadText.classList.add('hidden');
                    uploadIcon.classList.add('hidden');
                    fileLoaded.classList.remove('hidden');
                    uploadArea.classList.add('border-green-500');
                }
            });

            // ✅ Bouton "Changer de fichier"
            changeFileBtn.addEventListener('click', () => {
                fileInput.value = ''; // reset
                uploadText.classList.remove('hidden');
                uploadIcon.classList.remove('hidden');
                fileLoaded.classList.add('hidden');
                uploadArea.classList.remove('border-green-500');
            });

            // ✅ Drag & Drop (optionnel)
            uploadArea.addEventListener('dragover', e => {
                e.preventDefault();
                uploadArea.classList.add('border-primary');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('border-primary');
            });

            uploadArea.addEventListener('drop', e => {
                e.preventDefault();
                const file = e.dataTransfer.files[0];
                if (file) {
                    fileInput.files = e.dataTransfer.files;
                    fileNameDisplay.textContent = file.name;
                    uploadText.classList.add('hidden');
                    uploadIcon.classList.add('hidden');
                    fileLoaded.classList.remove('hidden');
                    uploadArea.classList.add('border-green-500');
                }
            });
        });
    </script>
{% endblock %}
