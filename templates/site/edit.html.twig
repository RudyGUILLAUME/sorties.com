{% extends 'base.html.twig' %}

{% block title %}Modifier le site{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier le site</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.nom) }}
                <div class="mt-3 d-flex gap-2">
                    <a href="{{ path('app_site_index') }}" class="btn btn-secondary">Annuler</a>
                    <button class="btn btn-primary" type="submit">Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}


