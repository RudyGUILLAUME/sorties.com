{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block body %}
    <main class="flex-1 p-8 overflow-y-auto">
        <div class="max-w-md mx-auto">

            <!-- üß≠ Fil d‚ÄôAriane -->
            <div class="flex flex-wrap gap-2 mb-6 text-sm">
                <a href="{{ path('app_home') }}" class="text-primary hover:underline">Accueil</a>
                <span class="text-subtext-light dark:text-subtext-dark">/</span>
                <span class="text-text-light dark:text-text-dark">Mot de passe oubli√©</span>
            </div>

            <!-- üîê En-t√™te -->
            <div class="text-center mb-10">
                <h1 class="text-3xl font-extrabold text-text-light dark:text-text-dark">Mot de passe oubli√© ?</h1>
