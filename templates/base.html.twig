<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sorties.com{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
<div id="main-content">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <img src="{{ asset('images/testLogo.png') }}" alt="Logo Sorties.com" height="50" class="me-2">
                <span class="fw-bold text-white">Sorties.com</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Sorties</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Se connecter</a>
                    </li>
                    <li class="nav-item">
                        {% if registrationForm is defined %}
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">Créer un compte</a>
                        {% else %}
                            <a class="nav-link" href="{{ path('app_register') }}">Créer un compte</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="py-4">
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        {% block body %}{% endblock %}
    </main>
</div>

{% include 'partials/modal_connexion.html.twig' with {
    error: error ?? null,
    last_username: last_username ?? ''
} %}

{% if registrationForm is defined %}
    {% include 'partials/modal_register.html.twig' %}
{% endif %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const hasLoginModal = {{ app.flashes('open_login_modal') is not empty ? 'true' : 'false' }};
        const hasRegisterModal = {{ app.flashes('open_register_modal') is not empty ? 'true' : 'false' }};
        if (hasLoginModal) {
            const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
            loginModal.show();
        }
        if (hasRegisterModal) {
            const registerEl = document.getElementById('registerModal');
            if (registerEl) {
                const registerModal = new bootstrap.Modal(registerEl);
                registerModal.show();
            }
        }
    });
</script>
</body>
</html>
