<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sorties.com{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
<div id="main-content">

    {% include 'partials/navbar.html.twig' %}
    <main class="py-4">
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        {% block body %}{% endblock %}
    </main>
</div>

{% include 'partials/modal_connexion.html.twig' %}
{% include 'partials/modal_register.html.twig' %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const openLogin = {{ app.flashes('open_login_modal') is not empty ? 'true' : 'false' }};
        const openRegister = {{ app.flashes('open_register_modal') is not empty ? 'true' : 'false' }};
        if (openLogin) {
            const el = document.getElementById('loginModal');
            if (el) new bootstrap.Modal(el).show();
        }
        if (openRegister) {
            const el = document.getElementById('registerModal');
            if (el) new bootstrap.Modal(el).show();
        }
    });
</script>
</body>
</html>
