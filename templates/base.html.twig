<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sorties.com{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/login-form.css') }}">
    <link rel="stylesheet" href="{{ asset('css/register-form.css') }}">
    <link rel="stylesheet" href="{{ asset('css/loader.css') }}">


</head>
<body>
<div id="main-content">

    <!-- === Global Loader === -->
    <div id="loader-container">
        <div class="loader"></div>
    </div>

    {% include 'partials/navbar.html.twig' %}
    <main>
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        {% block body %}{% endblock %}
    </main>
</div>

{% include 'partials/modal_connexion.html.twig' %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

{% block javascripts %}
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Cacher le loader dès que le DOM est prêt
            const loader = document.getElementById('loader-container');
            const content = document.getElementById('page-content');

            window.addEventListener('load', () => {
                loader.classList.add('fade-out');
                setTimeout(() => {
                    loader.style.display = 'none';
                    content.classList.remove('hidden');
                }, 500);
            });
        });
    </script>
{% endblock %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const openLogin = {{ app.flashes('open_login_modal') is not empty ? 'true' : 'false' }};
        if (openLogin) {
            const el = document.getElementById('loginModal');
            if (el) new bootstrap.Modal(el).show();
        }
    });

    document.querySelectorAll('a, form').forEach(el => {
        el.addEventListener('click', () => {
            document.getElementById('loader-container').style.display = 'flex';
        });
    });

</script>
</body>
</html>
